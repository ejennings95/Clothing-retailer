<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Clothing Retailer</title>
  </head>
  <body>
    <h1>Hello World</h1>

    <% @shoppingcart.stock.stock_list.each do |item| %>
       <h5> <%= item[:name] %>, <%= item[:category] %>, <%= item[:price] %>, <%= item[:quantity] %> </h5>
       <form action="/add_to_cart" method="post">
         <input type="hidden" name="item_name" value="<%= item[:name] %>">
         <input type="submit" value="Add to cart" id="add_to_cart(<%=item[:name]%>)">
       </form>
    <% end %>

    <h2>Shopping Cart:</h2>

    <% @shoppingcart.shoppingcart.each do |item| %>
       <h5> <%= item %> </h5>
       <form action="/remove_from_cart" method="post">
         <input type="hidden" name="item_name" value="<%= item %>">
         <input type="submit" value="Remove from cart" id="remove_from_cart(<%=item%>)">
       </form>
    <% end %>

    <h2>Total Price: Â£<%= @shoppingcart.total %></h2>

  </body>
</html>
