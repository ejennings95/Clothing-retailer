<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Clothing Retailer</title>
  </head>
  <body>
    <% if @shoppingcart.shoppingcarttotal.discountcodes.discount_attempted || @shoppingcart.shoppingcarttotal.discount_price == @shoppingcart.shoppingcarttotal.price %>
      <%= flash[:warning] %>
    <% end %>

    <h1>Hello World</h1>

    <% @shoppingcart.stock.stock_list.each do |item| %>
       <h5> <%= item[:name] %>, <%= item[:category] %>, <%= item[:price] %>, <%= item[:quantity] %> </h5>
       <form action="/add_to_cart" method="post">
         <input type="hidden" name="item_name" value="<%= item[:name] %>">
         <input type="submit" value="Add to cart" id="add_to_cart(<%=item[:name]%>)">
       </form>
    <% end %>

    <h2>Shopping Cart:</h2>

    <% @shoppingcart.shoppingcart.each do |item| %>
       <h5> <%= item %> </h5>
       <form action="/remove_from_cart" method="post">
         <input type="hidden" name="item_name" value="<%= item %>">
         <input type="submit" value="Remove from cart" id="remove_from_cart(<%=item%>)">
       </form>
    <% end %>

    <h2>Total Price: £<%= @shoppingcart.shoppingcarttotal.price %></h2>

    <% if @shoppingcart.shoppingcarttotal.discount_price == @shoppingcart.shoppingcarttotal.price %>
      <form action="/discount_code" method="post">
        <input type="text" class="form-control" placeholder="Discount Code" id="discount_code" name="discount_code">
        <input type="submit" value="Submit" id="discount_code_submit">
      </form>
    <% else %>
      <h3>Total Price With Discount Code Applied: £<%= @shoppingcart.shoppingcarttotal.discount_price %> </h3>
    <% end %>

  </body>
</html>
